{
    "name": "mortezaa97/shop",
    "description": "",
    "keywords": [
        "mortezaa97",
        "shop"
    ],
    "homepage": "https://github.com/mortezaa97/shop",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "morteza jafari",
            "email": "mortezajafari76@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mortezaa97\\Shop\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mortezaa97\\Shop\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mortezaa97\\Shop\\ShopServiceProvider"
            ],
            "aliases": {
                "Shop": "Mortezaa97\\Shop\\ShopFacade"
            }
        }
    }
}
